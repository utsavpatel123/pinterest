<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/register.css">
</head>
<body>


  <% if (typeof errorMessage !=='undefined') { %>
    <div class="messageContainer" id="messageContainer">
    <div class="flashMsg">
        <p>
            <%= errorMessage %>
        </p>
    </div>
  </div>
    <% } %>
  
  
  <div class="container">
        <div class="content">
          <!--pinterest logo-->
          <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo" class="img1" />
          <p class="header">sign up</p>

         <form action="/user/register" method="post" id="registrationForm">
            <input type="text" name="userName" placeholder="User Name" class="detail"  
            pattern="^[a-zA-Z]+\d+$"  title="Username must start with a letter and end with a number, with letters in between." required/><br />
            <input type="text" name="fullName" placeholder="full Name" class="detail" required/>
            <input type="email" name="email" placeholder="Email" class="detail" required/>
            <input type="password" name="password" placeholder="Password" class="detail" 
            pattern="^(?=.*[a-z])(?=.*\d)[a-z\d]{6,}$" title="Password must be at least 6 characters long, contain a lowercase letter and a number." required/>
             <br>
              <br>
            <button type="submit" class="btn int">sign up</button>
         </form>
          <div>
            <a href="/login">already sign up?</a>
          </div>
        </div>
      </div>


<script src="/js/register.js"></script>
</body>
</html>